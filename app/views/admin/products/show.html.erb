<div class="container">
	<h1>Product Page</h1>

	<table class="table table-bordered">
		<tr>
			<th>Product ID</th>
			<td><%= @product.id %></td>
		</tr>
		<tr>
			<th>Category ID</th>
			<td><%= @product.category_id %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= @product.product_name %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= @product.description %></td>
		</tr>
		<tr>
			<th>Price</th>
			<td><%= number_to_currency @product.price %></td>
		</tr>
	</table>

	<%= link_to 'Back', admin_category_path(@product.category_id), class: "btn btn-default" %>
	<%= link_to 'Edit', edit_admin_product_path(@product), class: "btn btn-info" %>
</div>
